<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bryanrosales.zentre.TabsActivity">

    <TabHost
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/tabHost2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"></TabWidget>

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp">



                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/TV_Restaurants_Tab1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Restaurants"/>

                    <Button
                        android:id="@+id/_1_Restaurants_Tab1"
                        android:layout_width="match_parent"
                        android:layout_height="85dp"

                        android:background="@drawable/btn_kentucky"
                        android:layout_below="@+id/TV_Restaurants_Tab1"/>


                    <Button
                        android:id="@+id/Ibtn_2_Restaurants_Tab1"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:background="@drawable/btn_mcdonals"
                        android:layout_below="@+id/_1_Restaurants_Tab1"/>

                    <Button
                        android:id="@+id/Ibtn_3_Restaurants_Tab1"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:onClick="Send_Dialog_Restaurant"
                        android:background="@drawable/btn_pizzahut"
                        android:layout_below="@+id/Ibtn_2_Restaurants_Tab1"/>


                    <TextView
                        android:id="@+id/TV_Insurance_Tab1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Insurances"
                        android:layout_below="@+id/Ibtn_3_Restaurants_Tab1"/>

                    <Button
                        android:id="@+id/Ibtn_1_Insurance_Tab1"
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:background="@drawable/btn_gnp"
                        android:layout_below="@+id/TV_Insurance_Tab1"/>

                    <Button
                        android:id="@+id/Ibtn_2_Insurance_Tab1"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:background="@drawable/btn_angeles"
                        android:layout_below="@+id/Ibtn_1_Insurance_Tab1"/>

                    <Button
                        android:id="@+id/Ibtn_3_Insurance_Tab1"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:background="@drawable/btn_seguosmty"
                        android:layout_below="@+id/Ibtn_2_Insurance_Tab1"/>

                    <TextView
                        android:id="@+id/TV_Government_Tab1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Government"
                        android:layout_below="@+id/Ibtn_3_Insurance_Tab1"/>

                    <Button
                        android:id="@+id/Ibtn_1_Government_Tab1"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:background="@drawable/btn_jale"
                        android:layout_below="@+id/TV_Government_Tab1"/>

                    <Button
                        android:id="@+id/Ibtn_2_Government_Tab1"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:layout_below="@+id/Ibtn_1_Government_Tab1"/>

                    <Button
                        android:id="@+id/Ibtn_3_Government_Tab1"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:layout_below="@+id/Ibtn_2_Government_Tab1"/>

                    <TextView
                        android:id="@+id/TV_MedicalAssistance_Tab1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Medical Assistance"
                        android:layout_below="@+id/Ibtn_3_Government_Tab1"/>

                    <Button
                        android:id="@+id/Ibtn_1_MedicalAssistance_Tab1"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:layout_below="@+id/TV_MedicalAssistance_Tab1"/>

                    <Button
                        android:id="@+id/Ibtn_2_MedicalAssistance_Tab1"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:layout_below="@+id/Ibtn_1_MedicalAssistance_Tab1"/>

                    <Button
                        android:id="@+id/Ibtn_3_MedicalAssistance_Tab1"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:layout_below="@id/Ibtn_2_MedicalAssistance_Tab1"/>

                    <TextView
                        android:id="@+id/TV_SecurityReports_Tab1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Security"
                        android:layout_below="@+id/Ibtn_3_MedicalAssistance_Tab1"/>

                    <Button
                        android:id="@+id/Ibtn_1_SecurityReports_Tab1"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:layout_below="@id/TV_SecurityReports_Tab1"/>

                    <Button
                        android:id="@+id/Ibtn_2_SecurityReports_Tab1"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:layout_below="@id/Ibtn_1_SecurityReports_Tab1"/>

                    <Button
                        android:id="@+id/Ibtn_3_SecurityReports_Tab1"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:layout_below="@id/Ibtn_2_SecurityReports_Tab1"/>


                </LinearLayout>




                    <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                        <Button
                            android:id="@+id/Promotion1"
                            android:layout_width="match_parent"
                            android:layout_height="85dp" />
                        <Button
                            android:id="@+id/Promotion3"
                            android:layout_width="match_parent"
                            android:layout_height="85dp" />
                        <Button
                            android:id="@+id/Promotion4"
                            android:layout_width="match_parent"
                            android:layout_height="85dp" />
                        <Button
                            android:id="@+id/Promotion5"
                            android:layout_width="match_parent"
                            android:layout_height="85dp" />
                        <Button
                            android:id="@+id/Promotion6"
                            android:layout_width="match_parent"
                            android:layout_height="85dp" />


                    </LinearLayout>




                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical">

                      </LinearLayout>

            </FrameLayout>
            </ScrollView>
        </LinearLayout>
    </TabHost>
</RelativeLayout>

